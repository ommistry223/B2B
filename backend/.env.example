# Backend Environment Variables Example
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:4028

# JWT Secret - Generate a strong random string
JWT_SECRET=change-this-to-a-strong-random-secret-key

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=b2b_creditflow
DB_USER=postgres
DB_PASSWORD=your-postgres-password-here

# Email Service (Optional) - For sending notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-app-password

# Payment Gateway Secrets (Optional)
RAZORPAY_KEY_SECRET=your-razorpay-secret-here
STRIPE_SECRET_KEY=your-stripe-secret-key-here
